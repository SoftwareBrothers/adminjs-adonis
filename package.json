{
  "name": "@adminjs/adonis",
  "version": "1.1.0",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Rafał Dzięgielewski",
    "email": "rafal.dzieg@gmail.com"
  },
  "repository": "git@github.com:SoftwareBrothers/adminjs-adonis.git",
  "files": [
    "lib",
    "!lib/bin",
    "!lib/tests",
    "!lib/tests_helpers"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./adminjs_provider": "./lib/providers/adminjs_provider.js"
  },
  "scripts": {
    "build": "npm run compile",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" --up=\"1\" lib",
    "postcompile": "npm run copy:templates",
    "prepublishOnly": "npm run build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.1.1",
    "@adonisjs/core": "^6.2.2",
    "@adonisjs/eslint-config": "^1.2.1",
    "@adonisjs/lucid": "^20.1.0",
    "@adonisjs/prettier-config": "^1.2.1",
    "@adonisjs/session": "^7.1.1",
    "@adonisjs/tsconfig": "^1.2.1",
    "@japa/assert": "^2.1.0",
    "@japa/plugin-adonisjs": "^3.0.0",
    "@japa/runner": "^3.1.1",
    "@semantic-release/git": "^10.0.1",
    "@swc/core": "^1.3.107",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.11.10",
    "adminjs": "^7.5.10",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "luxon": "^3.4.4",
    "pg": "^8.11.3",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.4",
    "reflect-metadata": "^0.2.1",
    "semantic-release": "^21.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "knex-schema-inspector": "^3.1.0"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.2",
    "@adonisjs/lucid": "^21.0.1",
    "@adonisjs/session": "^7.1.1",
    "reflect-metadata": "^0.2.1"
  },
  "peerDependenciesMeta": {
    "@adonisjs/lucid": {
      "optional": true
    }
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  },
  "prettier": "@adonisjs/prettier-config",
  "tsup": {
    "entry": [
      "./index.ts",
      "./providers/adminjs_provider.ts",
      "./src/plugin/router.ts",
      "./src/types.ts",
      "./src/adapter/database.ts",
      "./src/adapter/lucid_resource.ts",
      "./src/adapter/property.ts",
      "./src/adapter/resource.ts",
      "./src/adapter/type_converter.ts"
    ],
    "outDir": "./lib",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": true,
    "target": "esnext"
  }
}
